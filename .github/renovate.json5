{
  "extends": [
    "config:base",
  ],
  "labels": [
    "PR type: dependencies ðŸ¤–",
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
      ],
      "groupName": "Deps with major upgrades",
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
      ],
      "automerge": true,
      "groupName": "Deps with minor upgrades",
    },
    {
      "matchDepTypes": [
        "devDependencies",
      ],
      "automerge": true,
      "groupName": "Dev dependencies",
    },
  ],
}
