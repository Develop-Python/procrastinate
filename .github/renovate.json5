{
  "extends": [
    "config:base"
  ],
  "labels": [
    "PR type: dependencies ðŸ¤–"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "Deps with major upgrades",
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "groupName": "Deps with minor upgrades",
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "groupName": "Dev dependencies",
    },
    {
      // Don't update Sphinx until #633 is good to go
      "matchPackageNames": ["Sphinx"],
      "matchUpdateTypes": ["major"],
      "enabled": false,
    },
  ]
}
